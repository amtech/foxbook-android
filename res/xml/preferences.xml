<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="全局设置" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="isMemDB"
            android:summaryOff="未使用内存数据库"
            android:summaryOn="使用内存数据库加快处理速度"
            android:title="内存数据库" />
        <!--
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="isIntDB"
            android:summaryOff="数据库在SD卡上"
            android:summaryOn="数据库在内部空间"
            android:title="数据库是否在内部空间" />
        -->
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="isUseNewPageView"
            android:summaryOff="关闭"
            android:summaryOn="启用"
            android:title="新版阅读页" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="isWhiteActionBar"
            android:summaryOff="系统默认，黑色"
            android:summaryOn="白色动作栏"
            android:title="动作栏主题" />
    </PreferenceCategory>
    <PreferenceCategory android:title="BookList设置" >
        <ListPreference
            android:defaultValue="orderby_count_desc"
            android:dialogTitle="选择切换数据库前的动作"
            android:entries="@array/entries_before_switch_db"
            android:entryValues="@array/entryvalues_before_switch_db"
            android:key="beforeSwitchDB3"
            android:summary="选择切换数据库前的动作，默认倒序"
            android:title="切换数据库前" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="isUpdateBlankPagesFirst"
            android:summaryOff="不检查"
            android:summaryOn="检查若有空白章节就先更新它"
            android:title="更新前检查空白章节" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="isCompareShelf"
            android:summaryOff="下载每个目录，较耗流量"
            android:summaryOn="较节省时间，流量，需有cookie"
            android:title="更新前比较书架" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="isShowAppIcon"
            android:summaryOff="隐藏图标"
            android:summaryOn="显示图标"
            android:title="显示图标么" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="isClickHomeExit"
            android:summaryOff="无反应"
            android:summaryOn="退出应用"
            android:title="点击ActionBar图标" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="isShowIfRoom"
            android:summaryOff="一直显示"
            android:summaryOn="如果有空间"
            android:title="选项菜单是否显示" />
    </PreferenceCategory>
    <PreferenceCategory android:title="阅读页设置" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="isFullScreen"
            android:summaryOff="阅读页不全屏"
            android:summaryOn="阅读页全屏"
            android:title="阅读页是否全屏" />

        <ListPreference
            android:defaultValue="default"
            android:dialogTitle="选择阅读背景"
            android:entries="@array/entries_pagebackground"
            android:entryValues="@array/entryvalues_pagebackground"
            android:key="myBGcolor"
            android:summary="选择阅读背景，默认羊皮纸"
            android:title="阅读背景" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="isMapUpKey"
            android:summaryOff="保持原功能"
            android:summaryOn="向上翻页键映射为向下翻页"
            android:title="将向上翻页键映射" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="isBodyBold"
            android:summaryOff="不加粗"
            android:summaryOn="加粗"
            android:title="正文字体是否加粗" />

        <Preference
            android:key="selectfont"
            android:summary="阅读页字体选择(需存在文件选择器)"
            android:title="选择字体" />
    </PreferenceCategory>
    <PreferenceCategory android:title="旧版阅读页设置" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="bHideActionBar"
            android:summaryOff="显示ActionBar"
            android:summaryOn="隐藏ActionBar"
            android:title="显示/隐藏ActionBar" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="isCloseSmoothScroll"
            android:summaryOff="系统默认打开平滑滚动"
            android:summaryOn="关闭平滑滚动，适合E-ink设备"
            android:title="关闭平滑滚动" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="isShowScrollBar"
            android:summaryOff="滚动条自动淡出"
            android:summaryOn="一直显示滚动条"
            android:title="一直显示滚动条" />
    </PreferenceCategory>
    <PreferenceCategory android:title="其他设置" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="isNewImportQDtxt"
            android:summaryOff="旧方法，适应性更好"
            android:summaryOn="新方法，更快，无相关章节"
            android:title="导入起点txt时使用的方法" />
        <ListPreference
            android:defaultValue="github"
            android:dialogTitle="选择本软件升级线路"
            android:entries="@array/entries_upgrade_line"
            android:entryValues="@array/entryvalues_upgrade_line"
            android:key="upgrade_line"
            android:summary="默认github，可选oschina"
            android:title="升级线路" />
    </PreferenceCategory>

